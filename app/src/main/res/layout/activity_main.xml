<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="techkids.vn.testalarm.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#fff"
        android:gravity="end"
        android:padding="@dimen/default_gap"
        android:text="1 + 1"
        android:textColor="#000"
        android:textSize="@dimen/text_size_default" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#fff"
        android:gravity="end"
        android:padding="@dimen/default_gap"
        android:text="2"
        android:textColor="#000"
        android:textSize="@dimen/text_size_default"
        android:layout_marginBottom="@dimen/default_gap"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:columnCount="4"
        android:orientation="horizontal"
        android:rowCount="5">

        <ImageView
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/margin_button"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:src="@drawable/custom_round_button_blue" />

        <TextView
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_button"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:text="%"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size_default" />

        <ImageView
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/margin_button"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:src="@drawable/custom_round_button_blue" />

        <TextView
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_button"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:text="/"

            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size_default" />

        <ImageView
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/margin_button"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:src="@drawable/custom_round_button_blue" />

        <TextView
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_button"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:text="x"

            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size_default" />

        <ImageView
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/margin_button"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:src="@drawable/custom_round_button_backspace" />

        <ImageView
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/margin_button"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:src="@drawable/custom_round_button_white" />

        <TextView
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_button"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:text="1"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_default" />

        <ImageView
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/margin_button"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:src="@drawable/custom_round_button_white" />

        <TextView
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_button"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:text="2"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_default" />

        <ImageView
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/margin_button"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:src="@drawable/custom_round_button_white" />

        <TextView
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_button"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:text="3"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_default" />

        <ImageView
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/margin_button"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:src="@drawable/custom_round_button_white" />

        <TextView
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_button"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:text="-"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_default" />

        <ImageView
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/margin_button"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:src="@drawable/custom_round_button_white" />

        <TextView
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_button"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:text="4"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_default" />

        <ImageView
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/margin_button"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:src="@drawable/custom_round_button_white" />

        <TextView
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_button"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:text="5"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_default" />

        <ImageView
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/margin_button"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:src="@drawable/custom_round_button_white" />

        <TextView
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_button"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:text="6"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_default" />

        <ImageView
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/margin_button"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:src="@drawable/custom_round_button_white" />

        <TextView
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_button"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:text="+"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_default" />

        <ImageView
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/margin_button"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:src="@drawable/custom_round_button_white" />

        <TextView
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_button"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:text="7"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_default" />

        <ImageView
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/margin_button"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:src="@drawable/custom_round_button_white" />

        <TextView
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_button"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:text="8"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_default" />

        <ImageView
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/margin_button"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:src="@drawable/custom_round_button_white" />

        <TextView
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_button"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:text="9"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_default" />

        <ImageView
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/margin_button"
            android:layout_row="3"
            android:layout_rowSpan="2"
            android:layout_rowWeight="1"
            android:src="@drawable/custom_rec_equal" />

        <TextView
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/margin_button"
            android:layout_row="3"
            android:layout_rowSpan="2"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:text="="
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size_default" />

        <TextView
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/margin_button"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:background="@drawable/custom_rec_0"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_default" />

        <ImageView
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/margin_button"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:src="@drawable/custom_round_button_white" />

        <TextView
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_button"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:text="."
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_default" />
    </GridLayout>
</LinearLayout>
